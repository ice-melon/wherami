<% provide(:title, 'New App') %>
<h1>New App</h1>

<div class="dota">
    <%= form_for(@app) do |f| %>

      <%= render 'shared/error_messages' , object: f.object %>


      <%= f.label :app_name %>
      <%= f.text_field :app_name %>

      <%= f.label :package_name %>
      <%= f.text_field :package_name %>

      <%= f.label :fingerprint %><label>(using ';' to split multiple fingerprints)</label>
      <%= f.text_field :fingerprint %>

      <%= f.label :app_description %>
      <%= f.text_area :app_description %>

      <%= f.label :team_name %>
      <%= f.text_field :team_name %>

      <%= f.label :website %>
      <%= f.text_field :website %>

      <div class="submit-button" >
        <%= f.submit "Submit", class: "btn btn-large btn-primary" %>
      </div> 
    <% end %>
</div>